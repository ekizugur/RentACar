@model CommentUpdateDto
<div class="card mb-grid w-50 ml-5 mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="card-header-title">Yorum Güncelle</div>


    </div>
    <div class="card-body collapse show" id="card1">
        <form asp-action="Update" asp-controller="Comment" method="post" autocomplete="off" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="CommentText" class="form-label">Yorum İçeriği</label>
                <textarea class="form-control" asp-for="CommentText" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

