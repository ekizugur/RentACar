                                            <tr role="row">
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=": activate to sort column ascending" style="width: 93.1719px;">
                                                    <label class="custom-control custom-checkbox m-0 p-0">
                                                        <input type="checkbox" class="custom-control-input table-select-all all-selected">
                                                        <span class="custom-control-indicator"></span>
                                                    </label>
                                                </th>
                                                <th scope="col" class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="İsim: activate to sort column descending" style="width: 320.828px;" aria-sort="ascending">İsim</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Soyisim: activate to sort column ascending" style="width: 311.062px;">Soyisim</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending" style="width: 303.719px;">Email</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Rol: activate to sort column ascending" style="width: 402.984px;">Rol</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Email Doğrulama: activate to sort column ascending" style="width: 402.984px;">Email Doğrulama</th>
                                                
                                                <th scope="col" class="sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 103.234px;">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var user in Model)
                                        {
                                            
                                        
                                            <tr role="row" class="">
                                                <th scope="row" class="">
                                                    <label class="custom-control custom-checkbox m-0 p-0">
                                                        <input type="checkbox" class="custom-control-input table-select-row">
                                                        <span class="custom-control-indicator"></span>
                                                    </label>
                                                </th>
                                                <td class="sorting_1">@user.FirstName</td>
                                                <td>@user.LastName</td>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <span class="badge badge-pill badge-primary">
                                                        @user.Role
                                                    </span>
                                                   
                                                </td>
                                                <td>@(user.EmailConfirmed ? "Doğrulanmış":"Doğrulanmamış")</td>

                                               
                                                <td>
                                                    <a class="btn btn-sm btn-primary" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id">Güncelle</a>
                                                    <a class="btn btn-sm btn-danger" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id">Sil</a>
                                                </td>
                                            </tr>
                                        }
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div><div class="row"><div class="col-sm-12 col-md-5"></div></div>
                        </div>
