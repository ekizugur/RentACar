@model UserUpdateDto

<div class="card mb-grid w-50 ml-5 mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="card-header-title">Kullanıcı Güncelle</div>


    </div>
    <div class="card-body collapse show" id="card1">
        <form asp-action="Update" asp-controller="User" method="post" autocomplete="off" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            @if (TempData["UserError"] != null)
            {
                var message = (TempData["UserError"] as String);

                <div class="row p-3 mb-2 bg-warning text-dark">
                    <div class="col-md-12">
                        <div>
                            @message
                        </div>
                    </div>
                </div>
            }
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="form-label" for="exampleInputEmail1">İsim</label>
                <input asp-for="FirstName" type="text" class="form-control" id="exampleInputEmail1" placeholder="İsim">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label" for="exampleInputEmail1">Soyisim</label>
                <input asp-for="LastName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Soyisim">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label" for="exampleInputEmail1">Email Adresi</label>
                <input asp-for="Email" type="text" class="form-control" id="exampleInputEmail1" placeholder="Email Adresi">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label" for="exampleInputEmail1">Telefon Numarası</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="form-label" for="exampleInputEmail1">Kullanıcının Rolü</label>
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            
         
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>