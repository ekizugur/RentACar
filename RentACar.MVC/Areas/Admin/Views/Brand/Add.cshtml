@model BrandAddDto
<div class="card mb-grid w-50 ml-5 mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="card-header-title">Marka Ekle</div>


    </div>
    <div class="card-body collapse show" id="card1">
        <form asp-action="Add" asp-controller="Brand" method="post" autocomplete="off" enctype="multipart/form-data">
            @if (TempData["BrandError"] != null)
            {
                var message = (TempData["BrandError"] as String);

                    <div class="row p-3 mb-2 bg-warning text-dark">
                        <div class="col-md-12">
                            <div>
                            @message
                            </div>
                        </div>
                    </div>
            }
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label" for="exampleInputEmail1">Marka İsmi</label>
                <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" placeholder="Marka İsmi">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>

