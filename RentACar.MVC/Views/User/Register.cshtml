
@model UserRegisterDto
<div class="page-heading header-text" style="background-image: url(https://www.manzara.gen.tr/w1/1956-Chevrolet-Facebook-Kapa%C4%9F%C4%B1.jpg)">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
              
            <h1>Rent A Car</h1>
            <span>Kiralama işlemleri için üyelik oluştur</span>
          </div>
        </div>
      </div>
</div>

<link href="~/car-rental/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

<section class="vh-100" style="background-color: transparent;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">


                                <form class="mx-1 mx-md-4" asp-controller="User" asp-action="register">
                                    <div asp-validation-summary="ModelOnly"></div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example1c" asp-for="FirstName" class="form-control" />
                                            <label class="form-label" asp-for="FirstName">İsim</label>
                                        </div>
                                        <div class="form-outline flex-fill mb-0 ml-3">
                                            <input type="text" asp-for="LastName" id="form3Example1c" class="form-control" />
                                            <label class="form-label" asp-for="LastName" for="form3Example1c">Soyisim</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="form3Example3c" asp-for="Email" class="form-control" />
                                            <label class="form-label" asp-for="Email">Email Adresi</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="string" asp-for="PhoneNumber" id="form3Example3c" class="form-control" />
                                            <label class="form-label" asp-for="PhoneNumber">Telefon Numarası</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="Password" id="form3Example4c" class="form-control" />
                                            <label class="form-label" for="form3Example4c">Şifre</label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

